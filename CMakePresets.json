{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 21,
        "patch": 0
    },

    "configurePresets": [
        {
            "name": "Release",
            "displayName": "Release config",
            "description": "Release build using Ninja generator",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/{presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ],

    "buildPresets": [
        {
            "name": "Release",
            "configurePreset": "Release"
        }
    ]
}